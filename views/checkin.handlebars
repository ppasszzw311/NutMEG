<div class="container-md px-5 py-3 border border-4">
  <div class="row">
    <div class="col sm-8">
      <p class="h4" id="datetime">日期時間:</p>
    </div>
    <div class="col sm-2 d-flex justify-content-end">
      <a class="#" href="/">
        <button class="btn btn-secondary">返回</button>
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <form method="post">
        <div class="row px-2 py-1">
          <p class="h4">值班班別</p>
          <select class="form-select" aria-label="Default select example">
            <option selected>請選擇班別</option>
            <option value="1">早班</option>
            <option value="2">中班</option>
            <option value="3">晚班</option>
          </select>
        </div>
        <div class="row px-2 py-1">
          <div class="col-sm-4 form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
            <label class="form-check-label" for="flexRadioDefault1">
              上班
            </label>
          </div>
          <div class="col-sm-4 form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
            <label class="form-check-label" for="flexRadioDefault2">
              代班上班
            </label>
          </div>
          <div class="col-sm-4 form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
            <label class="form-check-label" for="flexRadioDefault2">
              加班下班
            </label>
          </div>
        </div>
        <div class="check2">
          <div class="input-group">
            <span class="input-group-text">加班日期</span><input type="date" class="form-control">
          </div>
          <p class="h4">加班班別</p>
          <select class="form-select" aria-label="Default select example">
            <option selected>請選擇班別</option>
            <option value="1">早班</option>
            <option value="2">中班</option>
            <option value="3">晚班</option>
          </select>
        </div>

        <div class="d-flex align-items-end" id="check3">
          <button type="button" class="btn btn-danger me-3">取消</button>
          <button type="button" class="btn btn-warning me-3">送出</button>
        </div>
      </form>
    </div>
    <div class="col-sm-6">
      <div class="row" id="name">
        <p class="h2 col">員工編號</p>
        <input type="text" class="form-control" id="id_input" placeholder="請輸入員工編號">
      </div>
      <div id="number10">
        <button type="button" class="btn btn-secondary">1</button>
        <button type="button" class="btn btn-secondary">2</button>
        <button type="button" class="btn btn-secondary">3</button>
        <button type="button" class="btn btn-secondary">4</button>
        <button type="button" class="btn btn-secondary">5</button>
        <button type="button" class="btn btn-secondary">6</button>
        <button type="button" class="btn btn-secondary">7</button>
        <button type="button" class="btn btn-secondary">8</button>
        <button type="button" class="btn btn-secondary">9</button>
        <button type="button" class="btn btn-secondary">0</button>
        <button type="button" class="btn btn-secondary">倒退</button>
        <button type="button" class="btn btn-secondary">刪除</button>
      </div>
    </div>
  </div>

</div>